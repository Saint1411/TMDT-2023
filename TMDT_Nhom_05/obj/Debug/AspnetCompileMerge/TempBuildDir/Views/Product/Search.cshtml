@model List<TMDT_Nhom_05.Models.Product>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Search";
}

<!-- Products Section -->
<div class="container" style="margin-top:30px">
    <div class="row">
        @foreach (var i in Model)
        {
            <div class="col-6 col-lg-3 mb-5 mb-lg-0">
                <!-- Card -->
                <div class="card d-block">
                    <img class="card-img-top" src="~/Areas/Admin/Content/img/img_products/@i.ImagePro" alt="Image Description">
                    <div class="card-footer text-center py-4">
                        <h3 class="h5 mb-1">@i.NamePro</h3>
                        <span class="d-block text-muted font-size-1 mb-3">@i.Category1.NameCate</span>
                        <a class="btn btn-sm btn-outline-primary btn-pill transition-3d-hover px-5" href="#"><i class="fas fa-shopping-cart"></i></a>
                    </div>
                </div>
                <!-- End Card -->
            </div>
        }
    </div>
</div>
<!-- End Products Section -->
