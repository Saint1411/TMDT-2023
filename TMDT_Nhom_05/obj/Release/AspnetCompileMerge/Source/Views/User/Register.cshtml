
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center; margin-top: 20px;">Đăng ký tài khoản</h2>
<br />
<div class="row">
    <div class="offset-md-1 col-md-10">
        @using (Html.BeginForm("Register", "User"))
        {
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="name">Họ và tên</label>
                @Html.TextBox("NameCus", null, new { @class = "form-control", @id = "name", required = "required" })
            </div>
            <div class="form-group">
                <label for="name">Tên đăng nhập</label>
                @Html.TextBox("UserCus", null, new { @class = "form-control", @id = "name", required = "required" })
            </div>
            <div class="form-group">
                <label for="matkhau">Mật khẩu</label>
                @Html.Password("PassCus", null, new { @class = "form-control", @id = "matkhau", required = "required" })
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                @Html.TextBox("EmailCus", null, new { @class = "form-control", @id = "email", required = "required", type = "email" })
            </div>
            <div class="form-group">
                <label for="dienthoai">Số điện thoại</label>
                @Html.TextBox("PhoneCus", null, new { @class = "form-control", @id = "dienthoai", required = "required" })
            </div>
            <button type="submit" class="btn btn-primary" style="margin-top: 20px;">Đăng ký</button>
        }
    </div>
</div>

