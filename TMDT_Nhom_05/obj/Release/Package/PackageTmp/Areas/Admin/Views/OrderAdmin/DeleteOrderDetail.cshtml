@model TMDT_Nhom_05.Models.OrderDetail

@{
    ViewBag.Title = "Xóa chi tiết đơn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa chi tiết đơn hàng</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã đơn hàng
        </dt>

        <dd>
            @Model.IDOrder
        </dd>

        <dt>
            Sản phẩm
        </dt>

        <dd>
            @Model.Product.NamePro
        </dd>

        <dt>
            Số lượng
        </dt>

        <dd>
            @Model.Quantity
        </dd>

        <dt>
            Tổng tiền
        </dt>

        <dd>
            @{
                int tong = (int)Model.Quantity * (int)Model.Product.Price;
                <p>@tong.ToString("#,##0") ₫</p>
            }
        </dd>


    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa" class="btn btn-danger" /> |
            @Html.ActionLink("Quy về danh sách", "OrderDetail", new { id = Model.IDOrder })
        </div>
    }
</div>
