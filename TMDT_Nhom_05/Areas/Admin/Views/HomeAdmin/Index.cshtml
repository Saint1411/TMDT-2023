
@{
    ViewBag.Title = "Trang quản trị";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-inner">
    <div class="row">
        <div class="col-md-12">
            <h1 class="page-head-line" style="margin-bottom: 20px;">DASHBOARD</h1>
        </div>
    </div>
    <!-- /. ROW  -->
    <div class="row">
        <div class="col-md-4">
            <div class="main-box mb-red">
                <a href="~/Admin/ProductAdmin/Index">
                    <i class="fas fa-seedling fa-5x"></i>
                    <h5 style="font-family:'Times New Roman'">Sản phẩm</h5>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="main-box mb-dull">
                <a href="~/Admin/OrderAdmin/OrderList">
                    <i class="fas fa-money-check-alt fa-5x"></i>
                    <h5 style="font-family:'Times New Roman'">Đơn hàng</h5>
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="main-box mb-pink">
                <a href="~/Admin/Customer/CustomerList">
                    <i class="fas fa-users fa-5x"></i>
                    <h5 style="font-family:'Times New Roman'">Khách hàng</h5>
                </a>
            </div>
        </div>

    </div>


    <div class="row">

        <div class="col-md-12">
            <div class="list-group">
                <a href="#" class="list-group-item active">
                    <h4 style="text-align:center;" class="list-group-item-heading">Danh sách quản trị</h4>
                </a>
            </div>
            <a href="~/Admin/HomeAdmin/CreateRole" class="btn btn-warning" style="color:snow; margin-bottom: 5px">Phân quyền</a>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tên người dùng</th>
                            <th>Vai trò </th>
                            <th>Quyền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            TMDT_Nhom_05.Models.TMDTEntities db = new TMDT_Nhom_05.Models.TMDTEntities();
                            foreach (var item in db.AdminUsers)
                            {
                                <tr>
                                    <td style="vertical-align:middle;font-size: 17px;">@item.ID</td>
                                    <td style="vertical-align:middle; font-size: 20px;">
                                        <span class="label label-danger">
                                            <a style="color:white" href="~/Admin/HomeAdmin/CreateRole">@item.NameUser</a>
                                        </span>
                                    </td>
                                    <td style="vertical-align:middle; font-size: 17px;">@item.RoleUser</td>
                                    <td style="vertical-align:middle;">
                                        @foreach (var fun in db.Roles.Where(f => db.Roles
                                                                .Where(af => af.idAdmin == item.ID)
                                                                .Select(af => af.idAdmin)
                                                                .Contains(f.idAdmin))
                                                   .ToList())
                                        {
                                            <span class="btn btn-success">@fun.Function.FunctionName</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/.Row-->
    <hr />

    <!--/.Row-->
    <hr />
    <div class="row" style="padding-bottom: 100px; ">
        <div class="col-md-6">
            <div id="comments-sec">
                <h4><strong>Ghi chú</strong></h4>
                <hr />


                <div class="form-group  ">
                    <label>Viết gì đó...</label>
                    <input type="text" class="form-control" required="required" placeholder="Tiêu đề" />
                </div>
                <div class="form-group ">
                    <label>Vấn đề?</label>
                    <textarea class="form-control" rows="8"></textarea>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success">Chấp nhận &amp; Gửi</button>
                </div>
            </div>

        </div>
        <div class="col-md-6">
            <div class="panel panel-back noti-box">
                <span class="icon-box bg-color-black">
                    <i class="fa fa-bicycle"></i>
                </span>
                <div class="text-box">
                    <p class="main-text">52 Important Issues to Fix </p>
                    <p>Please fix these issues to work smooth</p>
                    <p>Time Left: 30 mins</p>
                    <hr />
                    <p>
                        <span class=" color-bottom-txt">
                            <i class="fa fa-edit"></i>
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.
                            Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.

                        </span>


                    </p>
                    <hr />
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit gthn.
                </div>
            </div>
        </div>
    </div>
    <!--/.ROW-->

</div>
